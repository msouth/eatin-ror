<div class="groups">
	<% @groups.each do |group| %>
		<div class="group">
			<%= group.name %>
			<h4> group members </h4>
			<ol>
				<% group.users.each do |user| %>
					<li> <%= user.username %> </li>
				<% end %>
			</ol>
			<%= form_with model: @groupie, data: {"parsley-validate": ''}, local: true do |f|  %>
				<%= f.hidden_field :user_id, required: true, value: current_user.id %>
				<%= f.hidden_field :group_id, required: true, value: group.id %>
				<%= f.submit "Join Group", class: 'btn btn-success' %>
			<% end %>
		</div>
	<% end %>
</div>