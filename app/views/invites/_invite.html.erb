<% if invite.invite_type == 'friend request' %>
	<p> <%= sender.first_name %> wants to be friends with you </p>
	<%= link_to "Add Friend", friendships_path(friend_id: sender), method: :post %>
<% elsif invite.invite_type == 'group request' %>
	<p> <%= sender.first_name %> wants you to join <%=  %> </p>
	<%= render '/groupies/groupie_form', group: @group %>
<% end %>