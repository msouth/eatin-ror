<h1> <%= @user.first_name %> </h1>
<%= link_to "Add Friend", friendships_path(friend_id: @user), method: :post %>
<%= link_to "remove", friendships_path, method: :delete %>
<div class="groups">
	<% @user.groups.each do |group| %>
		<div class="group">
			<p> <%= group.name %> </p>
		</div>
	<% end %>
</div>

<%= render @invites, sender: @sender %>

<h1> friends </h1>
<% @user.friends.each do |friend| %>
	<%= friend.first_name %>
<% end %>
<h1> inverse frinds </h1>
<% @user.inverse_friends.each do |friend| %>
	<%= friend.first_name %>
<% end %>