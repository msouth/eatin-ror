<div class="users">
	<% @users.each do |user| %>
		<div class="user">
			<h1> <%= user.first_name %> </h1>
			<p> <%= user.username %> </p>
			<p> <%= user.id %> </p>
			<% if current_user %>
				<%= form_with model: Invite.new, data: {"parsley-validate": ''}, local: true do |f| %>
					<%= f.hidden_field :invite_type, required: true, value: "friend request" %>
					<%= f.hidden_field :user_id, required: true, value: user.id %>
					<%= f.hidden_field :sender_id, required: true, value: current_user.id %>
					<%= f.submit "Add Friend" %>
				<% end %>
			<% end %>
		</div>
	<% end %>
</div>